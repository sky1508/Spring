<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
<bean id="triangle" class="com.myspring4.Triangle">
	<property name="pointA" ref="zeroPoint"></property>
	<property name="pointB" ref="point2"></property>
	<property name="pointC" ref="point3"></property>
</bean>

<bean id="zeroPoint" class="com.myspring4.Point">
	<property name="x" value="0"></property>
	<property name="y" value="0"></property>
</bean>

<bean id="point2" class="com.myspring4.Point">
	<property name="x" value="-20"></property>
	<property name="y" value="0"></property>
</bean>

<bean id="point3" class="com.myspring4.Point">
	<property name="x" value="0"></property>
	<property name="y" value="20"></property>
</bean>

</beans>